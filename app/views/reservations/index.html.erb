<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:datestart) %></th>
      <th><%= model_class.human_attribute_name(:timestart) %></th>
      <th><%= model_class.human_attribute_name(:dateend) %></th>
      <th><%= model_class.human_attribute_name(:timeend) %></th>
      <th><%= model_class.human_attribute_name(:byhour) %></th>
      <th><%= model_class.human_attribute_name(:byday) %></th>
      <th><%= model_class.human_attribute_name(:parkinglot_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.id, reservation_path(reservation) %></td>
        <td><%= reservation.datestart %></td>
        <td><%= reservation.timestart %></td>
        <td><%= reservation.dateend %></td>
        <td><%= reservation.timeend %></td>
        <td><%= reservation.byhour %></td>
        <td><%= reservation.byday %></td>
        <td><%= reservation.parkinglot.name %></td>
        <td><%= reservation.user.email %></td>
        <td><%= reservation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reservation_path(reservation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      reservation_path(reservation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_reservation_path,
            :class => 'btn btn-primary' %>
