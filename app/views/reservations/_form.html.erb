<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :datestart %>
  <%= error_span(@reservation[:datestart]) %>
  <%= f.input :timestart %>
  <%= error_span(@reservation[:timestart]) %>
  <%= f.input :dateend %>
  <%= error_span(@reservation[:dateend]) %>
  <%= f.input :timeend %>
  <%= error_span(@reservation[:timeend]) %>
  <%= f.input :byhour %>
  <%= error_span(@reservation[:byhour]) %>
  <%= f.input :byday %>
  <%= error_span(@reservation[:byday]) %>
  <%= f.association :parkinglot, label_method: :name %>
  <%= error_span(@reservation[:parkinglot_id]) %>
  <%= f.association :user, label_method: :email %>
  <%= error_span(@reservation[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn btn-default' %>
<% end %>

