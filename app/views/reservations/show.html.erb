<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:datestart) %>:</strong></dt>
  <dd><%= @reservation.datestart %></dd>
  <dt><strong><%= model_class.human_attribute_name(:timestart) %>:</strong></dt>
  <dd><%= @reservation.timestart %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dateend) %>:</strong></dt>
  <dd><%= @reservation.dateend %></dd>
  <dt><strong><%= model_class.human_attribute_name(:timeend) %>:</strong></dt>
  <dd><%= @reservation.timeend %></dd>
  <dt><strong><%= model_class.human_attribute_name(:byhour) %>:</strong></dt>
  <dd><%= @reservation.byhour %></dd>
  <dt><strong><%= model_class.human_attribute_name(:byday) %>:</strong></dt>
  <dd><%= @reservation.byday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parkinglot_id) %>:</strong></dt>
  <dd><%= @reservation.parkinglot.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @reservation.user.email %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reservations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reservation_path(@reservation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reservation_path(@reservation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
