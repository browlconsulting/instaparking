<%= simple_form_for @userinteraction, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :question %>
  <%= error_span(@userinteraction[:question]) %>
  <%= f.input :answer %>
  <%= error_span(@userinteraction[:answer]) %>
  <%= f.association :parkinglot %>
  <%= error_span(@userinteraction[:parkinglot_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                userinteractions_path, :class => 'btn btn-default' %>
<% end %>
