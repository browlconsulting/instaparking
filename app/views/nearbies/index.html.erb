<p id="notice"><%= notice %></p>

<h1>Listing Nearbies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nearbies.each do |nearby| %>
      <tr>
        <td><%= nearby.name %></td>
        <td><%= nearby.description %></td>
        <td><%= link_to 'Show', nearby %></td>
        <td><%= link_to 'Edit', edit_nearby_path(nearby) %></td>
        <td><%= link_to 'Destroy', nearby, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

