<p id="notice"><%= notice %></p>

<h1>Listing Special Features</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @special_features.each do |special_feature| %>
      <tr>
        <td><%= special_feature.name %></td>
        <td><%= special_feature.description %></td>
        <td><%= link_to 'Show', special_feature %></td>
        <td><%= link_to 'Edit', edit_special_feature_path(special_feature) %></td>
        <td><%= link_to 'Destroy', special_feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

